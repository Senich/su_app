<div class="sign_in_up">
  <h2 class='text-center'>Регистрация нового пользователя</h2>
  <div class='row'>
    <div class='col-md-12'>
      <%= form_for(resource, as: resource_name, :html => {class: 'form-horizontal', role: 'form' },
                   url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div class="form-group">
          <div class="control-label col-md-3">
            <%= f.label :first_name, text='Имя' %>
          </div>
          <div class="col-md-6">
            <%= f.text_field :first_name, class: 'form-control',
                             autofocus: true %>
          </div>
        </div>

        <div class="form-group">
          <div class="control-label col-md-3">
            <%= f.label :last_name, text='Фамилия' %>
          </div>
          <div class="col-md-6">
            <%= f.text_field :last_name, class: 'form-control',
                             autofocus: true %>
          </div>
        </div>

        <div class="form-group">
          <div class="control-label col-md-3">
            <%= f.label :email, text='E-mail' %>
          </div>
          <div class="col-md-6">
            <%= f.email_field :email, class: 'form-control',
                              autofocus: true %>
          </div>
        </div>

        <div class="form-group">
          <div class="control-label col-md-3">
            <%= f.label :password, text='Пароль' %>
          </div>
          <div class="col-md-6">
            <%= f.password_field :password, class: 'form-control',
                                 autocomplete: 'off' %>
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> символов минимум)</em>
            <% end %><br />
          </div>
        </div>

        <div class="form-group">
          <div class="control-label col-md-3">
            <%= f.label :password_confirmation, 'Подтверждение пароля' %>
          </div>
          <div class="col-md-6">
            <%= f.password_field :password_confirmation, class: 'form-control',
                                 autocomplete: 'off' %>
          </div>
        </div>

        <div class="form-group">
          <div class='col-md-offset-3 col-md-6'>
            <%= f.submit 'Создать аккаунт', class: 'btn btn-primary btn-md' %>
          </div>
        </div>
      <% end %>

      <div class="form-group">
        <div class="col-md-offset-3 col-md-6">
          <%= render 'devise/shared/links' %>
        </div>
      </div>
    </div>
  </div>
</div>