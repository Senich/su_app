<div class='row'>
  <div class='col-md-12'>
    <%= simple_form_for(@user, :html => {class: 'form-horizontal'}) do |f| %>
      <%= render 'shared/errors', obj: @user , model_name: 'продавца' %>
      <div class='col-md-4 col-md-offset-4'>
        <%= f.input :first_name, label: 'Имя' %>
        <%= f.input :last_name, label: 'Фамилия' %>
        <%= f.association :company, label: 'Компания', include_blank: false %>
        <%= f.input :email %>
        <%= f.input :password %>
        <%= f.input :password_confirmation, label: 'Подтверждение пароля' %>
        <%= f.button :submit, @user.new_record? ? 'Добавить продавца' : 'Обновить сведения', class: 'btn-primary' %>
      </div>
    <% end %>
  </div>
</div>
