<div class="row">
  <h1><p class="text-center">Список участников</p></h1>
</div>
<div class="row">
  <div class="col-md-2">
    <%= link_to 'Добавить продавца', new_user_path, class: 'btn btn-primary link' %>
  </div>
</div>
<div class="col-md-12 col-xs-12">
  <% unless @users.empty? %>
    <table class="table table-striped table-hover">
      <thead>
      <tr>
        <th>Полное имя</th>
        <th>Дата регистрации</th>
        <th colspan="2"></th>
        <tbody>
        <% @users.each do |user| %>
        <tr>
          <td><%= link_to user.full_name, user_path(user) %></td>
          <td><%= user.created_at %></td>
          <td><%= link_to 'Редактировать', edit_user_path(user) %></td>
          <td><%= link_to 'Удалить', user_path(user), method: :delete, data: { confirm: 'Вы уверены?' } %></td>
        </tr>
      <% end %>
      </tbody>
      </tr>
      </thead>
      </table>
  <% end %>
</div>