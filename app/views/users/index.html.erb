<div class="row">
  <h1><p class="text-center">Список участников</p></h1>
</div>
<div class="col-md-10 col-xs-12 col-md-offset-1">
  <% unless @users.empty? %>
    <table class="table table-striped table-hover">
      <thead>
      <tr>
        <th>Полное имя</th>
        <th>Компания</th>
        <th>Дата регистрации</th>
        <th colspan="2"></th>
        <tbody>
        <% @users.each do |user| %>
        <tr>
          <td><%= link_to user.full_name, user_path(user) %></td>
          <td><%= link_to user.company.name, company_path(user.company) %></td>
          <td><%= user.created_at.to_formatted_s(:db)  %></td>
          <td><%= link_to '<span class="glyphicon glyphicon-pencil">'.html_safe, edit_user_path(user) %></td>
          <td><%= link_to '<span class="glyphicon glyphicon-remove">'.html_safe, user_path(user), method: :delete, data: { confirm: 'Вы уверены?' } %></td>
        </tr>
      <% end %>
      </tbody>
      </tr>
      </thead>
      </table>
  <% end %>
</div>
<div class="row col-md-10 col-md-offset-1">
    <%= link_to 'Добавить продавца', new_user_path, class: 'btn btn-primary link' %>
</div>
