<div class="row">
	<h1><p class="text-center">Мои продукты</p></h1>
</div>
<div class="row">
	<div class="col-md-2">
		<%= link_to "Добавить товар", new_user_product_path(current_user), class: "btn btn-primary link" %> 
	</div>
</div>

<div class="col-md-8 col-xs-12">
  <% unless @products.empty? %>
	<table class="table table-stripped">
	  <thead>
		<tr>
		  <th>Название</th>
		  <th>Категория</th>
		  <th>Цвет</th>		  
		  <th>Размеры (ШхВхГ)</th>
		  <th>Стоимость</th>
		  <th colspan="3"></th>
		  <tbody>
		    <% @products.each do |product| %>
		      <tr>
		      	<td><%= product.name %></td>
		      	<td><%= product.product_category %></td>
		      	<td><%= product.color %></td>
		      	<td><%= "#{product.width}x#{product.height}x#{product.depth}" %></td>
		      	<td><%= product.price %></td>
		      	<td><%= link_to "Просмотр", [current_user, product] %></td>
		      	<td><%= link_to "Редактировать", [:edit, current_user, product] %></td>
		      	<td><%= link_to "Удалить", [current_user, product], method: :delete, data: { confirm: "Are you sure?"}%></td>
		      </tr>
		    <% end %>    	
		  </tbody>  
		</tr>		
	  </thead>
	</table>
  <% end %>	
</div>