<div class="row">
	<h1><p class="text-center">Мои товарные позиции</p></h1>
</div>
<div class="row">
	<div class="col-md-2">
		<%= link_to 'Добавить товар', new_company_product_path(current_user.company_id), class: 'btn btn-primary link' %>
	</div>
</div>

<div class="col-md-12 col-xs-12">
  <% unless @products.empty? %>
	<table class="table table-striped table-hover">
	  <thead>
		<tr>
		  <th>Название</th>
		  <th>Категория</th>
		  <th>Цвет</th>		  
		  <th>Размеры (ШхВхГ)</th>
		  <th>Стоимость</th>
		  <th colspan="2"></th>
		  <tbody>
		    <% @products.each do |product| %>
		      <tr>
		      	<td><%= link_to product.name, product %></td>
		      	<td><%= product.category %></td>
		      	<td><%= product.color %></td>
		      	<td><%= "#{product.width}x#{product.height}x#{product.depth}" %></td>
		      	<td><%= number_to_currency product.price %></td>
		      	<td><%= link_to 'Редактировать', [:edit, product] %></td>
		      	<td><%= link_to 'Удалить', product, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
		      </tr>
		    <% end %>    	
		  </tbody>  
		</tr>		
	  </thead>
	</table>
  <% end %>	
</div>