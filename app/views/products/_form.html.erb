<div class="row">
  <div class="col-md-12">
    <%= form_for([current_user, @product], :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <% if @product.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@product.errors.count, "ошибка") %>
            препятствуют созданию товарной позиции: </h2>
          <ul>
            <% @product.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

    <div id="create-form">
      <div class="form-group">
        <div class="control-label col-md-4">
          <%= f.label :product_category, "Категория" %>
        </div>
        <div class="col-md-4">
          <%= f.select(:product_category, options_for_select(['Мебель для гостинной', 'Кухонная мебель']), {}, {class: "form-control"}) %>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-md-4">
          <%= f.label :name, "Наименование" %>
        </div>
        <div class="col-md-4">
          <%= f.text_field :name, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-md-4">
          <%= f.label :width, "Ширина" %>
        </div>
        <div class="col-md-2">
          <%= f.text_field :width, class: "form-control" %>
        </div>
        <div class="control-label">
          <p class="text-left">см</p>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-md-4">
          <%= f.label :height, "Высота" %>
        </div>
        <div class="col-md-2">
          <%= f.text_field :height, class: "form-control" %>
        </div>
        <div class="control-label">
          <p class="text-left">см</p>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-md-4">
          <%= f.label :depth, "Глубина" %>
        </div>
        <div class="col-md-2">
          <%= f.text_field :depth, class: "form-control" %>
        </div>
        <div class="control-label">
          <p class="text-left">см</p>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-md-4">
          <%= f.label :color, "Цвет" %>
        </div>
        <div class="col-md-4">
          <%= f.select(:color, options_for_select(['Белый', 'Чёрный', 'Красный', 'Зелёный', 'Жёлтый']), {}, {class: "form-control"}) %>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-md-4">
          <%= f.label :price, "Стоимость" %>
        </div>
        <div class="col-md-2">
          <%= f.text_field :price, class: "form-control" %>
        </div>
        <div class="control-label">
          <p class="text-left">руб.</p>
        </div>
      </div>

       <div class="form-group">
        <div class="control-label col-md-4">
          <%= f.label :description, "Описание" %><br>
        </div>
        <div class="col-md-4">
          <%= f.text_area :description, class: "form-control", rows: "10" %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-md-offset-4 col-md-10">
          <%= f.submit "Создать товарную позицию", class: "btn btn-primary btn-md" %>
        </div>
      </div>
    </div>  
    <% end %>
  </div>
</div>