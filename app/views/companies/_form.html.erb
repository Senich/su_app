<div class="row">
  <div class="col-md-12">
    <%= form_for(@company, :html => {class: 'form-horizontal', role: 'form' })  do |f| %>
      <%= render 'shared/errors', obj: @company , model_name: 'компании' %>

      <div class="form-group">
        <div class="control-label col-md-3">
          <%= f.label :name, 'Название' %>
        </div>
        <div class="col-md-6">
          <%= f.text_field :name, class: 'form-control',
                           autofocus: true %>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-md-3">
          <%= f.label :address, 'Адрес' %>
        </div>
        <div class="col-md-6">
            <%= f.fields_for :sections do |section_form| %>
              <%= section_form.select(:address_id, options_from_collection_for_select(Address.all, 'id', 'full_address'), {},
                {class: 'form-control'}) %>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-md-3">
          <%= section_form.label :location, 'Номер секции' %>
        </div>
        <div class="col-md-6">
          <%= section_form.text_field :location, class: 'form-control', autofocus: true %>
            <% end %>
        </div>
      </div>

      <div class="form-group">
          <div class='col-md-offset-3 col-md-6'>
            <%= f.submit @company.new_record? ? 'Создать компанию' : 'Обновить данные', class: 'btn btn-primary btn-md' %>
          </div>
        </div>

    <% end %>
  </div>
</div>
