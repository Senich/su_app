<div class="row">
  <h1><p class="text-center">Список зарегистрированных компаний</p></h1>
</div>
<div class="row">
  <div class="col-md-2">
    <%= link_to 'Добавить компанию', new_company_path, class: 'btn btn-primary link' %>
  </div>
</div>
<div class="col-md-12 col-xs-12">
  <% unless @companies.empty? %>
    <table class="table table-striped table-hover">
      <thead>
      <tr>
        <th>Название компании</th>
        <th colspan="2"></th>
        <tbody>
        <% @companies.each do |company| %>
        <tr>
          <td class="col-md-2"><%= link_to company.name, company_path(company) %></td>
          <td class="col-md-6"><%= company.about %></td>
          <td class="col-md-1"><%= link_to '<span class="glyphicon glyphicon-wrench">'.html_safe, edit_company_path(company) %></td>
          <td class="col-md-1"><%= link_to '<span class="glyphicon glyphicon-remove">'.html_safe, company_path(company), method: :delete, data: { confirm: 'Вы уверены?' } %></td>
        </tr>
      <% end %>
      </tbody>
      </tr>
      </thead>
      </table>
  <% end %>
</div>