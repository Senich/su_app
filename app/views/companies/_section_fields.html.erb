<div class="form-group">
  <div class="control-label col-md-3">
    <%= f.label :address_id, 'Адрес' %>
  </div>
  <div class="col-md-6">
    <%= f.select(:address_id, options_from_collection_for_select(Address.all, 'id', 'full_address'), {},
  {class: 'form-control'}) %>
  </div> 
</div>

<div class="form-group">
  <div class="control-label col-md-3">
    <%= f.label :location, 'Номер секции' %>
  </div>
  <div class="col-md-6">
    <%= f.text_field :location, class: 'form-control', autofocus: true %>
  </div>
</div>

<%= f.fields_for :phone do |phone_form| %>
  <%= render 'phone_fields', f: phone_form %>
<% end %>